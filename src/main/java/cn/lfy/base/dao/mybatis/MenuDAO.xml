    <trim prefix="where" prefixOverrides="and|or" >
      <if test="condition.type != null" >
         and type = #{condition.type}
      </if>
      <if test="condition.parentId != null" >
         and parentId = #{condition.parentId}
      </if>
      <if test="condition.parentIdPath != null" >
         and parentIdPath = #{condition.parentIdPath}
      </if>
      <if test="condition.state != null" >
         and state = #{condition.state}
      </if>
      <if test="condition.onMenu != null" >
         and onMenu = #{condition.onMenu}
      </if>
    </trim>
  </sql>
  
  <sql id="Example_Order_Clause">
  	<trim prefix="order by" prefixOverrides="," >
  		parentIdPath,orderNo
  	</trim>
  </sql>
  
  <sql id="Base_Column_List" >
    id, name, type, parentId, parentIdPath, url, orderNo, remark, state, createTime, onMenu,icon
  </sql>
  
  <select id="selectByExample" resultMap="BaseResultMap" parameterType="cn.lfy.base.model.Criteria" >
    select
    <include refid="Base_Column_List" />
    from menu
    <if test="_parameter != null" >
      <include refid="Example_Where_Clause" />
    </if>
    <if test="_parameter != null" >
      <include refid="Example_Order_Clause"/>
    </if>
