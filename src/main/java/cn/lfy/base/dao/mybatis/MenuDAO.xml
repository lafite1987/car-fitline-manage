    <selectKey resultType="java.lang.Long" keyProperty="id" order="AFTER" >
      SELECT LAST_INSERT_ID()
    </selectKey>
    insert into menu (name, type, parentId, parentIdPath, url, orderNo, remark, state, onMenu)
    values (#{name}, #{type}, #{parentId}, #{parentIdPath}, #{url}, #{orderNo}, #{remark}, #{state}, #{onMenu})
  </insert>
  
  <update id="updateByPrimaryKeySelective" parameterType="cn.lfy.base.model.Menu" >
    update menu
    <set >
      <if test="name != null" >
        name = #{name},
      </if>
      <if test="type != null" >
        type = #{type},
      </if>
      <if test="parentId != null" >
        parentId = #{parentId},
      </if>
      <if test="parentIdPath != null" >
        parentIdPath = #{parentIdPath},
      </if>
      <if test="url != null" >
        url = #{url},
      </if>
      <if test="orderNo != null" >
        orderNo = #{orderNo},
      </if>
      <if test="remark != null" >
        remark = #{remark},
      </if>
      <if test="state != null" >
        state = #{state},
      </if>
      <if test="onMenu != null" >
        onMenu = #{onMenu},
      </if>
      <if test="icon != null" >
        icon = #{icon},
      </if>
    </set>
    where id = #{id}
